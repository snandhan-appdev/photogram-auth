<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      My Likes
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td>
          <img src="<%= Photo.find(like.photo_id).image %>">
        </td>

        <td>
          <%= Photo.find(like.photo_id).caption %>
        </td>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>